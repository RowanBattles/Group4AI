<Window x:Class="_5_dot_test.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_dot_test"
        mc:Ignorable="d"
        Title="Loading" Height="200" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent" >
    <Grid>
        <Border Background="White" CornerRadius="10" BorderThickness="2" BorderBrush="Gray">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Please wait, processing..." FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="300" Height="20" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
